const os = require('os');
const user = os.userInfo()

//TO DISPALY USER INFO.
console.log(user);


//TO DISPLAY SYSTEM UPTIME.
console.log(`The System Uptime is ${os.uptime()} seconds`);


const currentOS = {
    name: os.type(),
    release: os.release(),
    totalMem : os.totalmem(),
    freeMem : os.freemem(),

}

console.log(currentOS);




